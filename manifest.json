{
  "manifest_version": 3,
  "name": "Metabase Image Resizer",
  "version": "1.0",
  "description": "Click to resize images on Metabase dashboard",
  "permissions": ["activeTab", "storage"],
  "content_scripts": [
    {
        "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "48": "/images/icon48.png"
  },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/icon16.png",
            "48": "images/icon48.png",
            "128": "images/icon128.png"
        }
    }
}
